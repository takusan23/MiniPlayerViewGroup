<?xml version="1.0" encoding="utf-8"?>
<io.github.takusan23.miniplayerviewgroup.MiniPlayerViewGroup xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:id="@+id/fragment_player_miniplayer_child_linear_layout"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#fff"
        android:clickable="true"
        android:focusable="true"
        android:orientation="vertical">

        <ImageView
            android:id="@+id/fragment_player_miniplayer_player_image_view"
            android:layout_width="match_parent"
            android:layout_height="250dp"
            android:background="#252525"
            app:srcCompat="@drawable/ic_outline_local_movies_24"
            app:tint="@android:color/white" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="10dp"
            android:text="2021/02/12 投稿" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="10dp"
            android:text="ミニプレイヤー"
            android:textSize="20sp" />
    </LinearLayout>
</io.github.takusan23.miniplayerviewgroup.MiniPlayerViewGroup>